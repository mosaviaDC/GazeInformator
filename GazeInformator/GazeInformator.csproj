    </Reference>
    <Reference Include="Tobii.Interaction.Net">
      <HintPath>Tobii.Interaction.Net.dll</HintPath>
    </Reference>
  </ItemGroup>

  <ItemGroup>
    <None Update="App.config">
      <CopyToOutputDirectory>Never</CopyToOutputDirectory>
    </None>
